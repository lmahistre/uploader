{
  "name": "uploader",
  "version": "1.2.0",
  "description": "An AJAX file uploader using React and NodeJS",
  "main": "app.js",
  "scripts": {
    "build": "node index.js build",
    "lint": "eslint server/ src/",
    "start": "node index.js start",
    "test": "nodejs index.js test"
  },
  "author": "Lionel Mahistre",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "express": "^4.17.1",
    "formidable": "^1.2.1",
    "jest": "^24.9.0",
    "node-notifier": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "aphrodite": "2.4.0",
    "babel-loader": "8.1.0",
    "eslint": "^7.12.1",
    "eslint-plugin-react": "^7.21.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-svg-loader": "^3.0.3",
    "webpack": "4.44.1"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12
    },
    "plugins": [
      "react"
    ],
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx"
        ]
      }
    ],
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": ["warn", "tab"],
      "react/prop-types": 0
    }
  }
}
